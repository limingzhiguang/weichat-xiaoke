<!--pages/search-address/index.wxml-->
<view>
    
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 500px;position:relative" value="{{value}}" bindchange="bindChange">
    <view class="address-title">{{year}}年{{month}}月{{day}}日</view>
      <picker-view-column>
        <view  style="line-height: 50px;text-align:center">请选择</view>
        <view wx:for="{{province}}" style="line-height: 50px;text-align:center">{{item.name}}</view>
      </picker-view-column>
      <picker-view-column>
        <view  style="line-height: 50px;text-align:center">请选择</view>
        <view wx:for="{{city}}" style="line-height: 50px;text-align:center">{{item.name}}</view>
      </picker-view-column>
      <picker-view-column>
        <view  style="line-height: 50px;text-align:center">请选择</view>
        <view wx:for="{{area}}" style="line-height: 50px;text-align:center">{{item.name}}</view>
      </picker-view-column>
    </picker-view>
  </view>
