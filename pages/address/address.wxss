/* pages/address/address.wxss */
.select-address{
  -webkit-box-direction:vertical;
  flex-direction: column;
  height:100%;
  background: #fff;
}

.search-input-box{
  flex:0 0 auto;
  border-bottom: 1px solid #eee;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
}

.bottom{
  position:relative;
  flex:1 1 auto;
  -webkit-box-direction: vertical;
  flex-direction: column;
}

.search-list-box{
  position: absolute;
  padding:0 40rpx;
  width:100%;
  height:100%;
  box-sizing: border-box;
  left:0;
  top:0;
  z-index: 99;  
}

.search-box{
  -webkit-box-direction:horizontal;
  flex-direction: row;
  width:100%;
}

.search-input{
  flex: 1 1 auto;
  margin-right: 8rpx;
  border-radius: 30rpx;
  padding-left:20rpx;
  height:60rpx;  
  line-height:60rpx; 
  font-size:28rpx;
  background:rgba(0,0,0,.1);
}

.search-btn{
  flex:0 0 auto;
  display:inline-block;
  padding:0 8rpx;
  font-size:28rpx;
  height:60rpx;  
  line-height:60rpx;
}

.hot-city{
  flex: 0 0 auto;
  border-bottom: 4px solid #eee;
  padding:40rpx 40rpx 10rpx;
  font-size:28rpx;
  box-sizing: border-box;
}

.hot-city .title{
  display: block;
  font-size:30rpx;
}

.hot-city .hot-city-list{
  -webkit-box-direction: row;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.hot-city .hot-city-list .city{
  display: block;
  padding:20rpx 0;
  width:25%;
  text-align: center;
}

.hot-city .hot-city-list .city.active{
  color:#FF2739;
}

.pick-box{
  flex:1 1 auto;  
  position: relative;
  overflow: hidden;
}

.block{
  position: absolute;
  box-sizing: border-box;
  padding:40rpx;
  width: 100%;
  height:100%;
  left:0;
  top:0;
  z-index:1;
}

.pick-container{
  position: relative;
  padding-top:100rpx;
  width:100%;
  height:100%;
  box-sizing: border-box;
  overflow:hidden;
}

.pick-container .pick-header{
  position: absolute;
  width:100%;
  height:68rpx;
  line-height: 68rpx;
  top:0;
  left:0;
  z-index:99;
}

.pick-header .title{
  float: left;
  width:33.33%;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
}

.pick-container .picker{  
  transform: translate(0,-50%);
  height:160%;
}

.picker .selecter{
  height:68rpx;
  line-height:68rpx;
  text-align: center;
  width:100%;
  font-size:28rpx;
  color:#999;
}

.picker .selecter.active{
  color:#FF2739;
}

.block .btn-box{
  position: absolute;
  box-sizing: border-box;
  padding:0 32rpx;
  width:100%;
  left:0;
  bottom:24rpx;
  z-index:9ï¼›
}

.block .btn-box button{
  border-radius: 50rpx;
  height:96rpx;
  line-height: 96rpx;
  background: #027AFF;
  color:#fff;
  font-size:32rpx;
}
