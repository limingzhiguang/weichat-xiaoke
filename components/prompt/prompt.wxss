/* components/prompt/prompt.wxss */
@import "../../icon/iconfont.wxss";

.prompt-box{
  position: fixed;
  display:flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.65);  
  opacity:1;
  transform: scale3d(1, 1, 1);
  transition: all .3s;
}

.prompt-hidden{
  opacity: 0;
  transform: scale3d(1, 1, 0);
}

.prompt-container{
  border-radius: 4rpx;
  opacity: 0;
  width:80%;
  background: #fff;
  overflow: hidden;
  transition: all .3s;
}

.show-dialog{
  opacity: 1;
  transform: translate(0,-50%);
}

.title-box{
  position: relative;
  padding: 42rpx 0 56rpx;
  line-height: 36rpx;
  font-size: 36rpx;
  color:#000;
  text-align: center;
}

.title-box .iconfont{
  float: right;
  margin-top:10rpx;
  width:60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;  
  font-size: 24rpx;
}

.input-box{
  box-sizing: border-box;
  padding:0 42rpx 55rpx;
  width:100%;
}

.input-box input{
  border-radius: 8rpx;
  border:2rpx solid #ddd;
  padding-left:30rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
}

.placeholder{
  color:#bbb;
}

.input-box input:focus{
  border:1px solid #175DFF;
}

.btn-group{
  border-top:1px solid #DCDEE3;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}

.btn-group .cancel{
  float:left;
  border-right: 1px solid #DCDEE3;
  width:50%;
  color:#999;
}

.btn-group .confirm{
  color:#017FFF;
}

.btn-group .cancel:active{
  background: #D5E2FF;
}




