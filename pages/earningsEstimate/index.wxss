.top-bg{
  display: none;
  position: fixed;
  top:82rpx;
  left:0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
}
.top-bg.active{
  display: block;
}
.top-float{
  display: none;
  position: absolute;
  top:82rpx;
  left: 0;
  z-index: 2;
  width: 100%;
  background-color: #fff;
  transition: ease-in .2s;
  /* transform: translateY(-100%); */
}
.top-float.active{
  display: block;
  /* transform: none; */
}
.tf-title{
  padding: 16rpx 32rpx; 
}
.flow-time{
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  padding: 0 8rpx 0 32rpx; 
  /* align-items: center;
  justify-content: center; */
}
.flow-time view{
  position: relative;
  width: 154rpx;
  height: 64rpx;
  margin-right: 24rpx;
  text-align: center;
  line-height: 64rpx;
  color: #333;
  background-color: #F5F5F5;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.flow-time view:nth-child(4n){
  margin-right: 0;
}
/* .flow-time view:last-child{
  margin-right: 0;
} */
.flow-time .active{
  color: #017FFF;
  background-color: #C6E6FD;
}
.flow-time .bg-active{
  display: none;
  position: absolute;
  right:0;
  bottom: 0;
  width: 28rpx;
  height: 28rpx;
}
.flow-time .active .bg-active{
  display: block
}
.top-footer{
 display: flex;
 justify-content: flex-end;
 margin:64rpx 40rpx 40rpx 0;
}
.top-footer .reset,.top-footer .sure{
 width: 240rpx;
 height: 80rpx;
 line-height: 80rpx;
 text-align: center;
 color: #fff;
 
}

.top-footer .reset{
  color: #333;
  background-color: #fff;
  border:1rpx solid rgba(221,221,221,1);
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
}
.top-footer .sure{
 background-color: #23a0ff;
 border:1rpx solid #23a0ff;
 border-bottom-right-radius: 40rpx;
 border-top-right-radius: 40rpx;
}
.top-float .list-ul{
  padding: 0 32rpx 32rpx 32rpx;
}
.top-float .list-li{
  height: 96rpx;
  line-height: 96rpx;
  border-bottom: 1rpx solid #eee;
}
.top-float .list-li:last-child{
  border-bottom: 0;
}
.top-float .list-li.active{
  color: #23a0ff;
}
.top-float .sell-money-input{
  display: flex;
  width: 100%;
  background-color: #fff;
}
.sell-money-input input{
  width: 240rpx;
  height: 64rpx;
  color: #999;
  background-color: #F5F5F5;
  border-radius: 32rpx;
}
.sell-money-input .middel-line{
  width: 53rpx;
  height: 2rpx;
  margin: 30rpx 16rpx 0 16rpx;
  background-color: #ddd;
}

.top-float .filter-search{
  position: relative;
  width: 90%;
  padding-right: 60rpx;
  background-color: #fff;
  text-align: left;
  border:1rpx solid rgba(199,199,204,1);
  border-radius:6rpx;
}
.top-float .filter-search .iconsousuo{
  position: absolute;
  top:0;
  left:24rpx;
  color: #bbb;
}
.top-float .filter-search .weui-input{
  box-sizing: border-box;
  height: 64rpx;
  margin-right: 20rpx;
  padding-left: 66rpx;
  font-size:28rpx;
  
}

.top-float .filter-search .iconfont-block{
  position: absolute;
  top:2rpx;
  right:0;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  color: #ccc;
  background-color: #fff;
}
