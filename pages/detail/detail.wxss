/* pages/detail/detail.wxss */
@import "../../wxss/detail.wxss";

.module{
  margin-bottom: 16rpx;
  background: #fff;
}

.tag-container{
  padding:24rpx 25rpx;
}

.tag-container .tag-box{
  flex: 1;
}

.tag-container .button{
  flex: 0 1 auto;  
  height: 48rpx;
  line-height: 48rpx;
  white-space: nowrap;
}

.module .title{
  padding:24rpx 0 12rpx 25rpx;
  height: 45rpx;
  line-height: 45rpx;
  color:#333;
  font-size: 32rpx;
  font-weight: bold;
}

.module .title .iconfont{
  padding-right: 17rpx;
  font-size:28rpx;
  color:#1890FF;
}

.module .stastics{
  padding:16rpx 18rpx 32rpx;
}

.stastics .box{
  display:inline-block;
  margin:0 8rpx;
  border-radius: 24rpx;
  border: 2rpx solid #FFE581;
  padding:10rpx 0; 
  width: 218rpx; 
}

.stastics .box text{
  display: block;
  width: 100%;
}

.stastics .box .num{
  line-height: 58rpx;
}

.stastics .box .name{
  line-height: 42rpx;
}

.handler-box{
  padding:6rpx 25rpx 134rpx;  
}

.handler-box .child{
  position: relative;  
  margin-bottom: 16rpx;
  border: 2rpx solid #EAF4FD;
  padding:0 24rpx;
  box-sizing: border-box;
  width: 338rpx;
  height: 72rpx;
  line-height: 68rpx;
    font-size: 28rpx;  
  vertical-align: middle;
  color:#333;
  white-space: nowrap;
}

.handler-box .child .label{
  display: block;
  overflow: hidden;
  line-height: 68rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}

.down-arrow{
  position: absolute;
  top:0;
  right:4rpx;
}

.down-arrow .iconfont{
  display: inline-block;
  width: 100%;
  height: 100%;
  line-height: 27rpx;
  text-align: center;
  font-size: 24rpx;
  -webkit-transform: scale(0.6,0.6);
  -moz-transform: scale(0.6,0.6);
  -ms-transform: scale(0.6,0.6);
  transform: scale(0.6,0.6);
  -webkit-transform-origin: center;
  -moz-transform-origin: center;
  -ms-transform-origin: center;
  transform-origin: center;
}

.handler-box .child .arrow{
  right:10rpx;
}

.switch-date{
  float:right;  
  font-weight: 400;
}

.switch-date text{
  display: inline-block;
  margin-right:32rpx; 
  line-height: 37rpx;
  font-size: 26rpx;
  color:#A5AAC1;
  transition: all .3s;
}

.switch-date .active{
  color:#017FFF;
  border-bottom:4rpx solid #017FFF;
}


