/* pages/earningsEstimate/index.wxss */
.all-customer{
  font-size: 28rpx;
  background-color: #fff;
}
.customer-top{
  position: fixed;
  top:0;
  left:0;
  z-index: 2;
  width: 100%;
  background-color: #fff;
  font-size: 28rpx;
  border-top: 1rpx solid #ccc;
}
.top-switch{
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 68rpx 0 64rpx;
}
.top-switch > view{
  color: #333;
}

.top-switch .active{
 color: #017FFF;
}
.top-switch .ico{
  margin-left: 12rpx;
  font-size: 8rpx;
  color: #000;
  vertical-align: middle;
}
.top-switch .active2 .iconSort{
  position: absolute;
  top:36rpx;
  transform: rotate(180deg);
}
.top-switch .search{
  display: flex;
  position: absolute;
  top:0;
  right: 0;
  z-index: 1;
  width:100%;
  background-color: #fff;
  transition: all .5s;
}

.top-switch .search > view{

  
}
.top-switch .search .we-input{ 
  position: relative;
  flex: 1;
  height: 56rpx;
  margin-top: 12rpx;
  margin-left: 24rpx;
  padding-left: 66rpx;
  border: 1rpx solid #eee;
  border-radius: 28rpx;
  text-align: left;
}
.search .we-input .weui-input{
  height: 100%;
  padding-right: 60rpx;
}
.top-switch .search .we-input .iconxingzhuang{
   position: absolute;
   right:24rpx;
   top:-10rpx;
   font-size: 28rpx;
   color: #bbb;
}
.top-switch .search .we-input .iconsousuo{
  position: absolute;
  left:24rpx;
  top:-10rpx;
  font-size: 28rpx;
  color: #ccc;
}
.top-switch .search .cancer{
  width: 30rpx;
 }
 .top-switch .search .to-search{
  width: 118rpx;
  height: 80rpx;
  line-height: 80rpx;
 }
