/* pages/dealWith/index.wxss */
.deal-with{
  font-size: 28rpx;
  color: #333;
}
.switch-tab{
  position: fixed;
  top:0;
  left:0;
  z-index: 2;
  width: 100%;
   height: 80rpx;
   line-height: 80rpx;
   display: flex;
   background-color: #fff;
}
.switch-tab .tab-item{
  position: relative;
  flex:1;
  padding-bottom: 12rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.tab-line{
  display: none;
  position: absolute;
  bottom:0;
  left:110rpx;
  width: 160rpx;
  border-bottom: 5rpx solid #017FFF;
}
.switch-tab .tab-item.active{
  color: #017FFF;
}
.switch-tab .tab-item.active .tab-line{
  display: block;
}
.follow-list{
  margin-bottom: 180rpx;
}
/*客户关怀列表*/
.customer-care{
