.detail-header{ 
  position: relative;
  padding:24rpx 32rpx 20rpx;
  background: -webkit-linear-gradient(135deg,rgba(68,102,255,1  ) 0%,rgba(39,193,255,1) 100%);
  background: linear-gradient(135deg,rgba(68,102,255,1) 0%,rgba(39,193,255,1) 100%);  
}

.banner-img{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.detail-header .title-box{
  position: relative;
  z-index: 2;
  margin-bottom: 18rpx;
  padding-right:100rpx;
  height: 56rpx;
  line-height: 56rpx;  
}

.detail-header .title-box .title{
  display: block;
  width:100%;
}

.detail-header .title-box .mark{
  position: absolute;
  display: block;
  top:6rpx;
  right:0;  
  -webkit-border-radius: 44rpx;
  border-radius: 44rpx;
  width:80rpx;
  height:44rpx;
  line-height:44rpx;  
}

.detail-header .title-box .upper{
  border:2rpx solid #FFE58F;
  color:#fa0;
  background: #FFFBE6;
}


.detail-header .title-box .down{
  border:2rpx solid #91D5FF;
  color:#017FFF;
  background: #E6F7FF;
}

.detail-header .row{
  position: relative;
  z-index: 2;
  margin-bottom: 12rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.tag-box .tag{
  display: inline-block;
  margin:2rpx 8rpx;
  border-radius:44rpx;
  border:2rpx solid #FFA39E;
  padding: 0 16rpx;
  height: 44rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color:#FF3545;
  background: #FFF1F0;
}

.org-button-group{
  padding:12rpx 13rpx;
}

.org-button-group .org-button{
  position: relative;
  margin-bottom: 12rpx;
  -webkit-border-radius: 8rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  border:2rpx solid #EAF4FD;
  padding-right: 25rpx;
  width:230rpx;
  height: 68rpx;
  line-height: 64rpx;
  text-align: center;
  vertical-align: middle;
  font-size:30rpx;
  color:#595866;
  background: #fff;
  transition: all .3s; 
}

.org-button-group .org-button.disabled{
  background: #ddd;
}

.org-button-group .org-button.active,
.org-button-group .org-button:not(.disabled):active,
.hover-btn{
  border:2rpx solid #017FFF;
  color:#fff;
  background: #017FFF;
}

.arrow{
  position: absolute;
  top:22rpx;
  right: 20rpx;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  width:27rpx;
  height: 27rpx;
  line-height: 27rpx;
  text-align: center;
  font-size: 24rpx;
  color:#003E7C;
  background: #F5F5F5;
  /* background:red; */
  transition: all .3s;
}

.arrow .iconfont{
  display: inline-block;
  width: 100%;
  height: 100%;
  line-height: 27rpx;
  text-align: center;
  font-size: 24rpx;
  -webkit-transform: scale(0.6,0.6);
  -moz-transform: scale(0.6,0.6);
  -ms-transform: scale(0.6,0.6);
  transform: scale(0.6,0.6);
  -webkit-transform-origin: center;
  -moz-transform-origin: center;
  -ms-transform-origin: center;
  transform-origin: center;
}

.org-button.active .arrow.rotate{
  transform:rotateZ(90deg);
}

