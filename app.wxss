.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background: -webkit-linear-gradient(to bottom, #027AFF, #05B1FF);
  background: linear-gradient(to bottom, #027AFF, #05B1FF);
}

