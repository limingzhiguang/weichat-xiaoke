/* components/address/index.wxss */
.address{
  position: fixed;
  left: 0;
  top:0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}
.address-body{
  position: absolute;
  left: 0;
  bottom:0;
  z-index: 9;
  width: 100%;
  background-color: #fff;
}
.address-title{
  display: flex;
  align-items: center;
  height: 84rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #ddd;
  font-size:34rpx;
  color: #108EE9;
}
.address-title .cancer{
  flex:1;
  text-align: left;
}
.address-title .tips{
  flex:1;
  text-align: center;
  color: #000;
}
.address-title .confirm{
  flex:1;
  text-align: right;
}
.address-main{
  width: 100%; 
  height: 424rpx;
  background-color: #fff;
}