/* custom-tab-bar/index.wxss */
.tabbar-box{
  position: fixed;
  box-sizing: border-box;
  padding:0 50rpx;
  top:0;
  left:0;
  width: 100%;
  height: 80rpx;
  background: #027AFF;
  color:#fff;
  font-size: 28rpx;
  line-height:80rpx;
}
 
.tabbar-box .item{
  position: relative;
  height: 80rpx;
  line-height:80rpx;
  box-sizing: border-box;
  cursor: pointer;
}

.tabbar-box .item .line{
  position: absolute;
  border-radius: 8rpx;
  left:0;
  bottom:0;
  width: 100%;
  height:8rpx;
}  

.tabbar-box .item.active .line{  
  background: #fff;
}