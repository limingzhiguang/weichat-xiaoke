/* pages/newclient.wxss */

.bussiness-infor {
	position: relative;
	box-sizing: border-box;
}

.color-gray{
	color: #999;
}

.form-box {
  position: relative;
	border-radius: 40rpx 40rpx 0 0;
	box-shadow: -2px -2px 3 #ccc;
	height: 100%;
	background: #fff;
	/* overflow-y: auto; */
	box-sizing: border-box;
	/* -webkit-overflow-scrolling: touch */
}

.no-permission{
  text-align: center;
  padding:100rpx 40rpx;
  color:rgba(0, 0, 0, .8);
}

.split-title {
	height: 56rpx;
  line-height: 56rpx;
  font-size:26rpx;
	text-align: center;
	font-weight: 500;
  color: #003E7C;
  background-color: #EAF4FD;
}

.split-title button {
	margin: 0;
	font-size: 24rpx;
	background: none;
	border-radius: 6rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #FF2739;
	color: #fff;
}

.normal-input-box {
	height: 95rpx;
	padding: 0 25rpx;
	background-color: #fff;
}

.normal-input-box .form-label {
	position: relative;
	display: block;
	box-sizing: border-box;
	padding-left:16rpx;
	height: 95rpx;
	line-height: 95rpx;
	color: #333;
	font-size:30rpx;
}

.border-bottom .form-label{
	box-sizing: border-box;
	padding-left:16rpx;
	font-size: 30rpx;
	color: #333;
	border-bottom: 2rpx solid #ddd;
	white-space: nowrap;
}

.normal-input-box .form-content{
	flex:1;
}

.form-label.is-required::before{
	position: absolute;
	left:-1rpx;
	top:50%;
	transform: translate(0,-48%);
	content: '*';
	color: #FF3545;
}

.normal-input-box input {
	flex: 1;
	box-sizing: border-box;
	width: 100%;
	height: 95rpx;
	line-height: 95rpx;
	color:#999;
	font-size:30rpx;
}

.normal-input-box input[name="address_detail"]{
	font-size: 28rpx;
}

.border-bottom input{
	border-bottom: 2rpx solid #E8EAEB;
}

.normal-input-box .select-gender {
	border-bottom:2rpx solid #E8EAEB;
	overflow: hidden;
}

.normal-input-box .select-gender .radio-group {
	display: block;
	width: 100%;
}

.normal-input-box .select-gender label {
	float: left;
	margin-top:12rpx;
	margin-right: 20rpx;
	border-radius: 4rpx;
	width: 156rpx;
	height: 68rpx;
	line-height: 68rpx;
	text-align: center;
	font-size:30rpx;
	color:#000;
}

.picker-icon{
	box-sizing: border-box;
	border-bottom: 2rpx solid #E8EAEB;
	padding: 20rpx 0;
}

.normal-input-box .location {
	box-sizing: border-box;
	padding: 27rpx 24rpx;
	width: 80rpx;
	height: 95rpx;
	line-height: 60rpx;
	text-align: center;
	color: #017FFF;
}

.normal-input-box .location image{
	display: inline-block;
	width: 100%;
	height: 100%;
}

.normal-input-box .location .iconfont {
	font-size: 48rpx;
}

.submit-btn{
	padding-top: 42rpx;
}

.submit-btn.active{
	padding-bottom: 30rpx;
}

.submit-btn .btn{
	box-sizing: border-box;
	-webkit-border-radius: 0;
	border-radius: 0;
	padding:0;
	width: 100%;
	height: 86rpx;
	line-height: 86rpx;
	text-align: center;
	color: #fff;
	font-size:36rpx;
	font-weight:400;
	background-color: #017FFF;
}
.submit-btn-active {
	opacity: 0.9;
	transform: scale(0.95, 0.95);
	position: relative;
	top: 3rpx;
	left: 3rpx;
	box-shadow:0px 0px 8px rgba(0, 0, 0, .1) inset; 
 }

.phone-checkbox {
	box-sizing: border-box;
	white-space: nowrap;
	height: 95rpx;
	line-height: 95rpx;
	border-bottom: 2rpx solid #E8EAEB;
}

.select-source {
	position: relative;
}

.select-source .input,
.normal-input-box .input{
	border-bottom: 2rpx solid #E8EAEB;
	box-sizing: border-box;
	width: 100%;
	height: 95rpx;
	line-height: 95rpx;
	color:#999;
	font-size:30rpx;
}

.normal-input-box .input .iconfont{
	font-size:24rpx;
}

.weui-toptips_show.toptips-ext-class{
  top:10rpx;
  z-index:999;
}
.pb-54{
	margin-bottom: 54rpx;
}

.pr-65{
	margin-bottom: 54rpx;
	padding-left: 65rpx;
}

.pr-65 .flex-box{
	border-bottom: 2rpx solid #ddd;
}