/* pages/orgPicture/index.wxss */
.scroll-page{
  overflow-x: hidden;
  overflow-y: auto;
  width: 100%;
  height: 100%;
}

.detail-header{
  position: relative; 
  box-sizing: border-box;
  padding:24rpx 32rpx 40rpx;
  width:100%;
  color:#fff;
  background: -webkit-linear-gradient(135deg,rgba(68,102,255,1  ) 0%,rgba(39,193,255,1) 100%);
  background: linear-gradient(135deg,rgba(68,102,255,1) 0%,rgba(39,193,255,1) 100%);  
}  

.banner-img{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.detail-header .title-box{
  position: relative;
  z-index: 2;  
  color:#fff;
}

.detail-header .title-box .title{
  display: block;
  margin-bottom: 18rpx;
  box-sizing: border-box;
  padding-right:100rpx;
  width:100%;
  height: 56rpx;
  line-height: 56rpx;
}

.detail-header .title-box .mark{
  position: absolute;
  display: block;
  top:6rpx;
  right:0;  
  -webkit-border-radius: 44rpx;
  border-radius: 44rpx;
  width:80rpx;
  height:44rpx;
  line-height:40rpx;  
}

.detail-header .title-box .upper{
  border:2rpx solid #FFE58F;
  color:#fa0;
  background: #FFFBE6;
}


.detail-header .title-box .down{
  border:2rpx solid #91D5FF;
  color:#017FFF;
  background: #E6F7FF;
}

.header{
  overflow: hidden;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding:20rpx 32rpx;
  background: #fff;
}

.header .title{
  float:left;
  line-height: 48rpx;
  font-size: 32rpx;
  color:#333;
}

.header .button{
  float: right;
  border-radius: 44rpx;
  border: 2rpx solid #017FFF;
  padding:0 20rpx;
  line-height: 44rpx;
  font-size: 28rpx;
  color:#017FFF;
}

.header .button .iconfont{
  padding-right:10rpx;
}

.pic-container{
  box-sizing: border-box;
  padding:0 25rpx 150rpx;
}

.pic-container .box{
  overflow: hidden;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  background: #fff;
}

.pic-container .picture{
  overflow: hidden;
  width:100%;
  max-height: 400rpx;
}

.pic-container .picture image{
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

.pic-container .infor{
  overflow: hidden;
  box-sizing: border-box;
  padding:20rpx 32rpx;
}

.pic-container .infor .date{
  float:left;
  line-height: 40rpx;
  font-size: 28rpx;
  color:#333;
}

.pic-container .infor .iconfont{
  float:right;
  font-size:36rpx;
  color:#999;
}

.pic-container .infor .iconfont:active{
  color:#FF3545;
}
