/* components/tabBar/index.wxss */
@import "../../icon/iconfont.wxss";
.white{
  color: #fff;
}
.detail-footer{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom:0;
  left:0;
  z-index: 1;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  box-shadow:0 0 18rpx 0 rgba(0,0,0,0.08);
}
.detail-footer.active{
  padding-bottom:30rpx;
}
.footer-item{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  color: #ABAABA;
}

.footer-item.active {
  color:#017FFF
}
.footer-item .iconfont{
  font-size: 46rpx;
}
.footer-item .foot-text{
  margin-top:8rpx;
  font-size:24rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
}
.footer-item .new-add-cicle{
  position: absolute;
  top:-64rpx;
  left:30rpx;
  z-index: 1;
}
.footer-item .new-add-cicle .iconfab_button{
   color: #1890FF;
   font-size: 96rpx;
   box-shadow:0 10rpx 18rpx 0 rgba(0,0,0,0.2),0 14rpx 18rpx 0 rgba(0,0,0,0.05);
   border-radius: 50%;
}
