/* pages/register/index.wxss */
@import "../../wxss/detailInfor.wxss";

.picture-container{
  margin-bottom: 42rpx;
}

.picture-container .title{
  display: block;
  margin-bottom: 15rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  color:#333;
}

.picture-box{
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
  align-content:flex-end;
  align-items:flex-end;
}

.picture-box {

}

.img-box{
  float:left;
  border:2rpx dashed #666;
  width: 180rpx;
  height: 180rpx;
  line-height: 180rpx;  
  text-align: center;
  color:#999;
  background: #ddd;
}

.img-box .iconfont{
  font-size:80rpx;
}

.img-box image{
  max-width: 100%;
  height: 100%;
}

.upload-button{
  margin-left:16rpx;
  color:#017FFF;
  font-size: 30rpx;
  cursor: pointer;
}

.upload-button .iconfont{
  padding-right:5rpx;
}
