/* components/followRecord/index.wxss */
@import "../../icon/iconfont.wxss";

.font-12{
  font-size: 24rpx;
}
.font-14{
  font-size: 28rpx;
}
.font-16{
  font-size: 32rpx;
}
.font-18{
  font-size: 36rpx;
}
.font-20{
  font-size: 40rpx;
}
.fr{
  float: right;
}
/*列表*/
.follow-list{
  margin-top: 96rpx;
  /* margin-bottom: 120rpx; */
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
}

.follow-list .overflow-hidden{
  overflow: hidden;
}

.follow-list .list-item{
  margin-top: 16rpx;
  padding:40rpx 25rpx 35rpx 25rpx;
  color: #595866;
  background-color: #fff;
  font-family:PingFang-SC-Medium,PingFang-SC;
}
 .remind-info{
   position: relative; 
}
.remind-info .fr{
  position: absolute;
  right: 0;
  top:-44rpx;
  color: #FAAD14;
}
.org-list {
  margin-top: 32rpx;
  
}
 .org-list .lab-name{
  margin-right: 6rpx;
}
.org-name{
  padding-top: 33rpx;
  padding-bottom: 32rpx;
  margin-bottom: 24rpx;
  color: #017FFF;
  font-size: 28rpx;
  border-bottom: 1rpx solid #C7C7CC;
}
.org-name .iconfont{
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin-left: 22rpx;
  color: #003E7C;
  /* border-radius: 50%;
  background-color: #F5F5F5; */
}
.list-item-des-title{
  color: #333;
  font-weight:bold;
  font-family:PingFangSC-Medium,PingFang SC;
}
.list-item-des-title .fr{
  float: right;
  margin-top:-20rpx;
  color: #017FFF;
  font-weight:400;
  font-size: 24rpx;
}
.list-item-des-title .fr .fr-edit{
  margin-left: 10rpx;
}
.list-item-des{
  display: inline-block;
  margin:4rpx 48rpx;
  font-size: 32rpx;  
  font-weight:500;
  color: #333;
}
.label-group{
  margin-bottom: 34rpx;
  font-weight: bold;
  color: #333;
}
.label-group .label-group-item{
  margin-right: 16rpx;
  padding: 4rpx 16rpx;
  color:#FF3545;
  background-color: #FFF1F0;
  border:2rpx solid rgba(255,163,158,1);
  border-radius: 22rpx;
  font-size:24rpx;
  font-weight: 400;
}
.file-list{
  position: relative;
    display: flex;
    flex-wrap: wrap;
    font-weight: bold;
    color: #333;
    margin-top:22rpx;
    margin-bottom: 24rpx;
    padding-left:84rpx;
}
.file-title{
  position: absolute;
  left: 0;
  top:0;
  z-index: 1;
}
.current-file{
  margin-right: 53rpx;
  margin-bottom:24rpx;
  min-height: 20rpx;
  color: #017FFF;
  font-weight: 400;
}
.current-file .iconfont{
  margin-right: 8rpx;
  vertical-align: middle;
}
.item-bottom{
  padding-top:24rpx;
  border-top: 1rpx solid #C7C7CC;
  color: #999;
  text-align: right;
  font-size: 24rpx;
}
.item-bottom .create-man{
  margin-right: 34rpx;
}
/*内容修改*/
.static-data-tips{
  position: fixed;
  left:0;
  bottom:0;
  z-index: 20;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}
.static-data-tips .st-da-main{
  position: absolute;
  bottom:0;
  left:0;
  z-index: 2;
  width: 100%;
  background-color: #fff;
  font-family:PingFangSC-Medium,PingFang SC;
  border-radius:4rpx;
}
.static-data-tips .st-da-main.active{
  /* top:auto;
 bottom:0; */
}
.static-data-tips .tips-text{
   height: 400rpx;
   margin:28rpx 25rpx 48rpx 25rpx;
   color: #999;
   border-bottom: 1rpx solid #ddd;
}
.static-data-tips .tips-text .follow-content{
  margin-bottom: 12rpx;
  color: #333; 
  font-size:30rpx;
}
.static-data-tips .tips-foot{
  height: 78rpx;
  line-height: 78rpx;
  padding:0 32rpx;
  font-size:30rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.static-data-tips .tips-foot .add-new-record{
  color: #017FFF;
  float: right;
}
/*底线*/
.bottom-line-tips{
  padding: 20rpx;
  color:#999;
  text-align:center;
  font-size: 24rpx;
}
/*无数据*/
.no-data{
  text-align: center;
}

.no-data .no-data-image{
  width: 224rpx;
  height: 214rpx;
  margin-top: 185rpx;
  text-align: center;
}
.no-data-tips{
  margin-top: 39rpx;
  color: #999;
  font-size:28rpx;
}

/*视频预览*/
.look-video{
  position: fixed;
  top:0;
  left:0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
}

.file-body{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.close-video{
  margin-top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ddd;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 50%;
  border-radius: 1rpx solid #ddd;
}