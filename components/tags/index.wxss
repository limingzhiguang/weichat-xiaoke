/* components/tags/index.wxss */

.tags-container{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  opacity:1;
  transform: scale3d(1, 1, 1);
  transition: all .3s;
}

.hidden-container{
  opacity: 0;
  transform: scale3d(1, 1, 0);
}

.container{
  position: absolute;
  left:0;  
  bottom:0;
  transform: translate(0%,100%);
  width: 100%;
  height: 600rpx;
  background: #fff;
  transition: all .5s;
}

.show-container{
  transform: translate(0%,0%);
}

.button-group{
  border-bottom:2rpx solid #eee; 
  box-sizing: border-box;  
  height: 78rpx;
  line-height: 78rpx;
  width: 100%;
  font-size:30rpx;
  overflow: hidden;
}

.button-group .cancel{
  float:left;
  padding: 0 32rpx;
  color:#999;
  transition: all .3s;
}

.button-group .confirm{
  float: right;
  padding: 0 32rpx;
  color:#108EE9;  
  transition: all .3s;
}

.button-group .cancel:active,
.button-group .confirm:active{
  background: #eee;
}

.tags-box{
  box-sizing: border-box;
  padding:8rpx 40rpx;
  height: 522rpx;
  overflow-x:hidden;
  overflow-y:auto; 
}

.tags-box text{
  display:inline-block;
  overflow: hidden;
  margin:32rpx 16rpx 0 0;
  border-radius: 28rpx;
  border: 3rpx solid #017FFF;  
  padding:0 20rpx;
  height: 50rpx;
  line-height: 44rpx;
  max-width: 100%;
  color:#017FFF;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;  
  transition: all .3s;
}

.tags-box .active,
.tags-box text:active{
  background: #017FFF;
  color:#fff;
}












